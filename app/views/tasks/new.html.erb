<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <%= form_with(model: @task, url: user_tasks_path, local: true) do |f| %>
    <%= render 'shared/tasks_error_messages' %>
  
    <%= f.label :title, "名称", class: "label-form" %>
    <%= f.text_field :title, class: "form-control" %>
  
    <%= f.label :detail, "詳細", class: "label-form" %>
    <%= f.text_area :detail, class: "form-control",rows: 5 %>
  
    <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
    <%= link_to "キャンセル", user_tasks_path(params[:user_id]), class: "btn btn-lg btn-default btn-form" %>
  <% end %>
  </div>
</div>