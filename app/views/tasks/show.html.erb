<%= render 'shared/tasks_error_messages' %>
<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th>
          <td class="col-md-10"><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active">名称</th>
          <td><%= @task.title %></td>
        </tr>
        <tr>
          <th class="active">詳細</th>
          <td>
            <!--%= @task.detail %>-->
            <%= simple_format(text_url_to_link(@task.detail).html_safe) %>
          </td>
        </tr>
        <tr>
          <th class="active">作成日</th>
          <td><%= simple_time(@task.created_at) %></td>
        </tr>
        <tr>
          <th class="active">更新日</th>
          <td><%= simple_time(@task.updated_at) %></td>
        </tr>
      </tbody>
    </table>
    
    <div>
      <%= link_to "キャンセル (一覧へ)", user_tasks_path(@task.user_id), class: "btn btn-lg btn-default" %>
      <!--<a class="btn btn-lg btn-success" href="/users/1/tasks/277/edit">編集</a>-->
      <%= link_to "編集", edit_user_task_path(@task.user_id, @task.id), class: "btn btn-lg btn-success" %>
      <!--<a data-confirm="「ta@」を削除します。よろしいですか？" class="btn btn-lg btn-danger" rel="nofollow" data-method="delete" href="/users/1/tasks/277">削除</a>-->
      <%= link_to "削除", user_task_path(@task.user_id, @task.id), method: :delete, class: "btn btn-lg btn-danger", data: {confirm: "「 #{@task.title} 」 を削除します。よろしいですか？"} %>
    </div>
  </div>    
</div>